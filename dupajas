<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dupa jas</title>
</head>
<body>


<script>
    let liczba1 = parseFloat(prompt("Podaj liczbe 1: "));

    while(true){
        if(isNaN(liczba1)){
            continue;
        }
        else{
            break;
        }
        
    }

    let liczba2 = parseFloat(prompt("Podaj liczbe 2: "));
    while(true){
        if(isNaN(liczba2)){
            continue;
        }
        else{
            break;
        }
        
    }
    let dzialanie = prompt("Podaj rodzaj dzialania(+,-,*,/): ")

    switch(dzialanie) {
        case "+":
            document.write ("Suma liczb to: " + (liczba1 + liczba2));
            break;
        case "-":
            document.write ("Różnica liczb to: " + (liczba1 - liczba2));
            break;
        case "*":
            document.write ("Iloczyn liczb to: " + (liczba1 * liczba2));
            break;
        case "/":
            if (liczba2 < 0 ){
                document.write ("Jesteś debilem, nie dzielimy przez 0")
                break;
            }
            else {
                document.write ("Iloraz liczb to: " + (liczba1 / liczba2));
                break;
            }
    }
</script>
</body>
</html>
